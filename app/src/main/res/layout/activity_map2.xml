<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@android:color/black"
    tools:context="com.example.aditi.combining.MapActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:background="@android:color/background_dark"
        android:src="@drawable/work2png"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="20dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="-205dp"
        android:layout_toEndOf="@+id/button3"
        android:background="@android:color/background_dark"
        android:src="@drawable/arrow"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/exit1"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:background="@android:color/background_dark"
        android:src="@drawable/exit"
        android:visibility="invisible" />


    <ImageView
        android:id="@+id/exit2"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:layout_toEndOf="@+id/rightDoor5"
        android:background="@android:color/background_dark"
        android:src="@drawable/exit"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="25dp"
        android:layout_height="55dp"
        android:layout_above="@+id/imageView1"
        android:layout_alignStart="@+id/exit1"
        android:background="@android:color/background_dark"
        android:src="@drawable/arrowtrial"
        android:visibility="invisible" />


    <ImageView
        android:id="@+id/rightDoor1"
        android:layout_width="20dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignStart="@+id/rightDoor2"
        android:layout_marginBottom="8dp"
        android:background="@android:color/background_dark"
        android:src="@drawable/rightdoor1"
        android:visibility="invisible" />


    <ImageView
        android:id="@+id/rightDoor2"
        android:layout_width="20dp"
        android:layout_height="80dp"
        android:layout_above="@+id/exit1"
        android:layout_alignEnd="@+id/exit1"
        android:layout_marginBottom="11dp"
        android:background="@android:color/background_dark"
        android:src="@drawable/rightdoor1"
        android:visibility="invisible" />


    <ImageView
        android:id="@+id/leftDoor5"
        android:layout_width="20dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_toStartOf="@+id/rightDoor5"
        android:background="@android:color/background_dark"
        android:src="@drawable/leftdoor5"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/rightDoor3"
        android:layout_width="20dp"
        android:layout_height="170dp"
        android:layout_above="@+id/imageView1"
        android:layout_alignStart="@+id/rightDoor1"
        android:background="@android:color/background_dark"
        android:src="@drawable/rightdoor3"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/rightDoor4"
        android:layout_width="20dp"
        android:layout_height="170dp"
        android:layout_alignBottom="@+id/rightDoor5"
        android:layout_alignStart="@+id/rightDoor1"
        android:layout_marginBottom="13dp"
        android:background="@android:color/background_dark"
        android:src="@drawable/rightdoor3"
        android:visibility="invisible" />


    <ImageView
        android:id="@+id/rightDoor5"
        android:layout_width="20dp"
        android:layout_height="200dp"
        android:layout_above="@+id/imageView3"
        android:layout_alignStart="@+id/rightDoor2"
        android:layout_marginBottom="18dp"
        android:background="@android:color/background_dark"
        android:src="@drawable/rightdoor4"
        android:visibility="invisible" />


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="20dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignEnd="@+id/imageView1"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="-185dp"
        android:background="@android:color/background_dark"
        android:src="@drawable/arrowtrial2"
        android:visibility="invisible" />


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:background="@android:color/background_dark"
        android:src="@drawable/bluedot"
        android:visibility="visible" />


    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="7dp"
        android:layout_marginTop="136dp"
        android:background="@android:color/black"
        android:backgroundTint="@android:color/background_light"
        android:onClick="Start"
        android:text="Start Navigation"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button2"
        android:layout_alignTop="@+id/button2"
        android:layout_marginTop="74dp"
        android:background="@android:color/background_dark"
        android:backgroundTint="@android:color/background_light"
        android:onClick="Stop"
        android:text="Stop Navigation"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="invisible"/>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/button3"
        android:layout_marginStart="22dp"
        android:background="@drawable/play"
        android:onClick="Start" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/imageButton"
        android:layout_below="@+id/imageButton"
        android:layout_marginTop="31dp"
        android:background="@drawable/stop"
        android:onClick="Stop" />

</RelativeLayout>
